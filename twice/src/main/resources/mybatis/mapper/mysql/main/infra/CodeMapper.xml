<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ezticket.infra.code.CodeDao">

	<resultMap id="resultMapObj" type="com.ezticket.infra.code.CodeDto"></resultMap>

    <select id="selectList" resultMap="resultMapObj">
        <!-- SELECT
        	a.number as groupnumber
            ,a.groupname
            ,b.deleteNY
            ,b.number
            ,b.name
            ,b.mdfcnDate
            ,b.codegroup_number
         FROM codegroup a, code b 
        WHERE 1=1 and a.number = b.codegroup_number and b.deleteNY = 0 
        ORDER BY b.number DESC -->
        
        SELECT
        	a.number as groupnumber
            ,a.groupname
            ,a.deleteNY as groupdeleteNY
            ,b.deleteNY
            ,b.number
            ,b.name
            ,b.regDate
            ,b.mdfcnDate
            ,b.codegroup_number
         FROM codegroup a
         left join code b
         on a.number = b.codegroup_number 
         <if test="shDelNy != null and !shDelNy.equals('')">AND b.deleteNY = #{shDelNy}</if>   
       <!--         
				<choose>
					<when test="shOptionDate == 1">AND a.regDateTime BETWEEN #{shDateStart} AND #{shDateEnd}</when>
					<when test="shOptionDate == 2">AND a.modDateTime BETWEEN #{shDateStart} AND #{shDateEnd}</when>
					</choose> -->        
	        <choose>
	            <when test="shOption == 1">AND b.number = #{shValue}</when>
	            <when test="shOption == 2">AND b.name LIKE CONCAT('%',#{shValue},'%')</when>
	        </choose> 
         ORDER BY b.number DESC
    </select>
    
    <select id="selectOne">
    SELECT 
    number
    ,name
    ,regDate
    ,deleteNY
    FROM code 
    WHERE 1=1 AND number = #{number}
    </select>
    
    <insert id="insert">
    insert into code
    (
    name
    ,deleteNY
    ,codegroup_number
    )
    values
    (
    #{name}
    ,#{deleteNY}
    ,#{codegroup_number}
    )
    </insert>
    
    <update id="update">
    update code
    set 
    name = #{name}
    where 
    number = #{number}
    </update>
    
     <delete id="delete">
    DELETE 
    FROM code
    WHERE number = #{number}
    </delete>
    
    <update id="updatedelete">
    update code
    set 
    deleteNY = 1
    where 
    number = #{number}
    </update>

   <!--  ,(select count(aa.ifcdSeq) from infrCode aa where 1=1 and aa.ifcdDelNy = 0 and aa.ifcgSeq = a.ifcgSeq) as xifcdSeqCount -->
	  
</mapper>